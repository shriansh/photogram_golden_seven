<h1>Edit your form</h1>

    <form action="http://localhost:3000/update_photo/<%= @photo_id %>/">
      <div>
        <label for="photo_caption">Caption:</label>
        <input type="text" name="the_caption" value="<%= Photo.find(@photo_id).caption %>">
      </div>

      <div>
        <label for="photo_image_url">Image URL:</label>
        <input type="text" name="the_source" value="<%= Photo.find(@photo_id).source %>">
      </div>

      <div>
        <button>Edit Photo</button>
      </div>

    </form>


